<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6EB8FF"
    android:onClick="voltar"
    tools:context=".telaSorteio">

    <ImageView
        android:id="@+id/gif_moeda"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/moeda"
        tools:ignore="ImageContrastCheck" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <ImageButton
        android:id="@+id/bnt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        android:onClick="verResultado"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/gif_moeda"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/gif_moeda"
        app:layout_constraintTop_toBottomOf="@+id/gif_moeda"
        app:srcCompat="@drawable/botao_ver_resultado"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/bnt_voltar"
        android:layout_width="232dp"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        android:contentDescription="TODO"
        android:onClick="voltar"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/gif_moeda"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/gif_moeda"
        app:layout_constraintTop_toBottomOf="@+id/gif_moeda"
        app:srcCompat="@drawable/botao_voltar_azul" />

</androidx.constraintlayout.widget.ConstraintLayout>